<%- include("partials/header") -%>
<div class="container">
    <% if (message) { %>
        <p class="text-center text-danger"><%= message %></p>
    <% } %>

    <% if (alumnos) { %>
        <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
            <div class="form-row">
                <div class="form-group col-md-4">
                    <label for="first-name">First Name</label>
                    <input type="text" class="form-control" name="alumno_nombre" id="alumno_nombre" value="<%= alumnos.alumno_nombre %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="last-name">Last Name</label>
                    <input type="text" class="form-control" name="alumno_apellido" id="alumno_apellido" value="<%= alumnos.alumno_apellido %>" required>
                </div>
                <div class="form-group col-md-4">
                    <label for="id">ID</label>
                    <input type="text" class="form-control" name="alumno_id" id="alumno_id" value="<%= alumnos.alumno_id %>" required disabled title="Username can't be changed">
                </div>
                <div class="form-group col-md-4">
                    <label for="email">E-Mail</label>
                    <input type="text" class="form-control" name="alumno_email" id="alumno_email" value="<%= alumnos.alumno_email %>" required disabled title="Username can't be changed">
                </div>
            </div>
            <button type="submit" class="btn btn-success float-right">Update Alumno</button>
        </form>
    <% } else { %>
        <p class="text-center">Profesor Not Found. Go <a href="/alumno/add">here</a> to add alumno.</p>
    <% } %>
</div>
</div>
</body>
</html>
