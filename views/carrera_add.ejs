<%- include("partials/header") -%>
    <main class="contenedor sombra">
    <section>
        <h2>Carreras</h2>
        <div class="container">
            <% if (message != '') { %>
                <p class="text-center text-danger"><%= message %></p>
                <% } %>
                <form class="add-carrera-form" action="" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="facultad_id" id="facultad_id" placeholder="Facultad ID" required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="carrera_id" id="carrera_id" placeholder="Carrera ID" required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="carrera_nombre" id="carrera_nombre" placeholder="Nombre Carrera" required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="descripcion" id="descripcion" placeholder="Descripcion" required>
                        </div>
                    </div>
                    <button type="submit" class="boton">Add Carrera</button>
                </form>
            </div>
    </section>
</main>
</div>
</body>
</html>
