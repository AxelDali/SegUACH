<%- include("partials/header") -%>
<main class="contenedor sombra">
    <section>
        <h2>Carreras</h2>
        <div class="container">
            <% if (message) { %>
                <p class="text-center text-danger"><%= message %></p>
                <% } %>

                <% if (carrera) { %>
                    <form class="add-player-form" action="" method="post" enctype="multipart/form-data">
                        <div class="form-row">
                            <div class="form-group col-md-4">
                                <label for="first-name">Facultad ID</label>
                                <input type="text" class="form-control" name="facultad_id" id="facultad_id" value="<%= carrera.facultad_id %>" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="last-name">Carrera ID</label>
                                <input type="text" class="form-control" name="carrera_id" id="carrera_id" value="<%= carrera.carrera_id %>" required>
                            </div>
                            <div class="form-group col-md-4">
                                <label for="id">Nombre</label>
                                <input type="text" class="form-control" name="carrera_nombre" id="carrera_nombre" value="<%= carrera.carrera_nombre %>" required disabled title="Username can't be changed">
                            </div>
                            <div class="form-group col-md-4">
                                <label for="id">Descripci√≥n</label>
                                <input type="text" class="form-control" name="descripcion" id="descripcion" value="<%= carrera.descripcion %>" required disabled title="Username can't be changed">
                            </div>
                        </div>
                        <button type="submit" class="boton">Update Carrera</button>
                    </form>
                    <% } else { %>
                        <p class="text-center">Profesor Not Found. Go <a href="/carrera/add">here</a> to add profesor.</p>
                        <% } %>
                    </div>
    </section>
</main>
</div>
</body>
</html>
