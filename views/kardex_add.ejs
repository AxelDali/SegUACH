<%- include("partials/header") -%>
    <main class="contenedor sombra">
    <section>
        <h2>Kardex</h2>
        <div class="container">
            <% if (message != '') { %>
                <p class="text-center text-danger"><%= message %></p>
                <% } %>
                <form class="add-kardex-form" action="" method="post" enctype="multipart/form-data">
                    <div class="form-row">
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="carrera" id="carrera" placeholder="Carrera" required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="materia" id="materia" placeholder="Materia" required>
                        </div>
                        <div class="form-group col-md-4">
                            <input type="text" class="form-control" name="descripcion" id="descripcion" placeholder="Descripcion" required>
                        </div>
                    </div>
                    <button type="submit" class="boton">Add Kardex</button>
                </form>
            </div>

    </section>
</main>
</div>
</body>
</html>
